<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.app.learntocount.learntocount.count6"
    android:background="@drawable/bg">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Count the number of Monkeys"
        android:id="@+id/textView4"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/img1"
        android:background="@drawable/monkey"
        android:onClick="countAnimals"
        android:layout_below="@+id/textView4"
        android:layout_alignLeft="@+id/textView4"
        android:layout_alignStart="@+id/textView4" />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/img2"
        android:background="@drawable/monkey"
        android:onClick="countAnimals"
        android:focusableInTouchMode="false"
        android:layout_alignTop="@+id/img1"
        android:layout_alignRight="@+id/textView4"
        android:layout_alignEnd="@+id/textView4" />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/img3"
        android:background="@drawable/monkey"
        android:onClick="countAnimals"
        android:focusableInTouchMode="false"
        android:layout_below="@+id/img1"
        android:layout_alignLeft="@+id/img1"
        android:layout_alignStart="@+id/img1" />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/img4"
        android:background="@drawable/monkey"
        android:onClick="countAnimals"
        android:focusableInTouchMode="false"
        android:layout_below="@+id/img2"
        android:layout_alignLeft="@+id/img2"
        android:layout_alignStart="@+id/img2" />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/img5"
        android:background="@drawable/monkey"
        android:onClick="countAnimals"
        android:focusableInTouchMode="false"
        android:layout_below="@+id/img3"
        android:layout_alignLeft="@+id/img3"
        android:layout_alignStart="@+id/img3" />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/img6"
        android:background="@drawable/monkey"
        android:onClick="countAnimals"
        android:focusableInTouchMode="false"
        android:layout_alignTop="@+id/img5"
        android:layout_alignLeft="@+id/img4"
        android:layout_alignStart="@+id/img4" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Next"
        android:id="@+id/btn01"
        android:visibility="invisible"
        android:onClick="goNext"
        android:layout_marginBottom="63dp"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/img4"
        android:layout_alignEnd="@+id/img4"
        android:layout_alignLeft="@+id/img3"
        android:layout_alignStart="@+id/img3" />

</RelativeLayout>
